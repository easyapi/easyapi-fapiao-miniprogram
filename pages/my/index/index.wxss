.container {
  background: #f4f4f4;
}

.user {
  height: 328rpx;
  background-image: url("https://qiniu.easyapi.com/2020/08/16/1597552546805");
  background-size: 100% 100%;
  overflow-y: auto;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.user-info {
  margin-top: 80rpx;
}

.user-info>image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #fff;
  margin-right: 40rpx;
}

.user-info>view {
  justify-content: space-between;
  padding: 8rpx 0;
}

.user-info__name {
  color: #fff;
  font-size: 40rpx;
  font-weight: 500;
  line-height: 100rpx;
}

.user-info__level {
  width: 88rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  color: #fff;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 16rpx;
  font-size: 18rpx;
}

.points_diff {
  color: #fff;
  font-size: 26rpx;
  font-weight: Regular;
  opacity: 0.7;

}

.order {
  position: relative;
  padding: 10rpx 30rpx;
  margin-top: -110rpx;
  z-index: 100;
}

.order-state {
  background: #fff;
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.order-state-all {
  display: flex;
  justify-content: space-between;
  padding: 40rpx 40rpx 0;
}

.all-order {
  color: #979797;
}

.order-state-list>view {
  width: 20%;
  align-items: center;
  justify-content: center;
  padding: 0 0 40rpx 0;
  box-sizing: border-box;
}

.order-state-list>view>text {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 6rpx;

}

.order-state-list>view>view {
  font-size: 24rpx;
  color: #909090;
  margin-top: 10px;
}

.flex-c {
  position: relative;
}

.order_news {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  line-height: 30rpx;
  text-align: center;
  border-radius: 50%;
  top: 20rpx;
  right: 28rpx;
  background: #DE0000;
  font-size: 12rpx;
}

.function,
.banner {
  padding: 10rpx 30rpx;
}

.function .first {
  border-radius: 15rpx 15rpx 0 0;
}

.function .last {
  border-radius: 0 0 15rpx 15rpx;
}

.van-cell_title {
  font-size: 28rpx;
}

.banner image {
  height: 160rpx;
  width: 100%;
  background: #fff;
}

.icon-daifukuan,
.icon-daifahuo,
.icon-daishouhuo-,
.icon-tuihuan- {
  color: var(--theme-color);
  font-size: 30rpx;
}

.imgsize {
  width: 80rpx;
  height: 80rpx;
}

/* 自定义导航栏 */
.box {
  background: #333333;
  font-weight: 500;
  width: 100%;
  position: fixed;
  top: 0;
  right: 0;
  z-index: 999;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.nav {
  width: 100%;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn {
  position: absolute;
  left: 10rpx;
}

.btn .van-button {
  padding: 0 30rpx;
  color: #FFFFFF;
  border: 1rpx solid rgba(255, 255, 255, 0.25);
  background-color: rgba(0, 0, 0, 0.25);
}
.layout{
  margin-top: 30rpx;
  padding: 0 30rpx;
}
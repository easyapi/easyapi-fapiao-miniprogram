<view class='container'>
  <view class='header'>
    <image src='../../../images/logo.png' />
    <text class='fz-20 fz-w'>开票小程序</text>
  </view>
  <van-cell-group>
    <van-field
      value="{{ userInfo.username }}"
      label="手机号"
      placeholder="请输入手机号"
      border="{{ false }}"
      bind:input="inputUsername"
    />
    <van-field
      value="{{ userInfo.password }}"
      password
      label="密码"
      placeholder="请输入密码"
      border="{{ false }}"
      bind:input="inputPassword"
    />
  </van-cell-group>
  <van-button type="primary" size="large" bindtap="login" >登录</van-button>
</view>
.container {
  background-color: #fff;
}

.login_autn {
  justify-content: center;
  align-items: center;
}

.login_autn>view {
  margin-top: 60rpx;
  width: 100%;
  height: 4rpx;
  background: #000000;
  opacity: 0.08;
}

.login_autn>image {
  width: 154rpx;
  height: 154rpx;
  margin: 9.2% 0 20rpx 0;
}

.login_btn {
  margin: 60rpx 0 40rpx 0;
  justify-content: space-between;
}

.login_btn>button {
  width: 100%;
  text-align: center;
  line-height: 42px;
  border: 1px solid #18110b;
  border-radius: 21px;
  color: #18110b;
  background-color: #fff;
  font-size: 32rpx;
  padding: 0;
  font-weight: normal;
}

.hint {
  margin-top: 40rpx;
  text-align: center;
}

.login_btn>.btn--bg {
  color: #fff;
  background-color: var(--theme-color);
  margin-top: 40rpx;
  border: none;
}

.flex-a {
  text-align: center;
  margin-top: 300rpx;
}

.col {
  color: blue;
}

.photo {
  width: 298px;
  display: flex;
  justify-content: center;
}

.image {
  margin: 16px 0 10px 0;
  width: 50px;
  height: 50px;
}

.name {
  font-size: 14px;
  text-align: center;
}

.get-phone {
  margin-bottom: 22px;
  font-family: PingFangSC-Regular;
  font-size: 13px;
  color: #999;
  letter-spacing: 0;
  text-align: center;
  line-height: 13px;
  margin-top: 5px
}

.grant {
  justify-content: center;
  align-items: center;
  width: 85%;
  height: 40px;
  background-color: #1890ff;
  color: white;
  border-radius: 4px;
  margin-bottom: 17px;
  font-size: 14px;
  margin-top: 20px;
}